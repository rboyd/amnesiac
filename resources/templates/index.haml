!!! 5
%html
  %head
    %link{"rel" => "stylesheet", "href" => "stylesheets/main.css", "type" => "text/css"}
    %script{"src" => "amnesiac.js"}
  %body
    .menu
      %button#add-card
        Add Card
    .container
      .card
        %p#card-text
      .controller
        %a#prev
          %img{ src: 'images/prev.png' }
        %a#next
          %img{ src: 'images/next.png' }
      :javascript
        amnesiac.core.main();
    #add-card-widget{ style: "display: none" }
      %textarea#question
      %textarea#answer
      %button#save-card
        Save Card
